<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".splashscreen">

    <ImageView
        android:id="@+id/image_splash"
        android:layout_width="@dimen/dimen236"
        android:layout_height="@dimen/dimen236"
        android:src="@drawable/logo_pariwisata"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen200"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameApps"
        android:textStyle="italic"
        android:textSize="@dimen/font42"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_splash"/>
</RelativeLayout>